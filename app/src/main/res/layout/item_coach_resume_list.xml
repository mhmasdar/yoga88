<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:id="@+id/txtResumeTitle"
            android:text="عضو هیِئت مدیره ورزش های همگانی"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_title"
            android:layout_height="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:id="@+id/txtStartDate"
            android:textSize="11sp"
            android:text="تاریخ شروع : 1396/11/23"
            android:layout_height="wrap_content"
            android:gravity="right"/>

        <ImageView
            android:layout_width="15dp"
            android:src="@drawable/ic_date1"
            android:layout_height="15dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:id="@+id/txtEndDate"
                android:textSize="11sp"
                android:text="تاریخ پایان : 1396/12/28"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/ic_date1"
                android:layout_height="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:padding="9dp"
                android:id="@+id/imgDelete"
                android:src="@drawable/ic_delete"
                android:layout_height="35dp" />

            <ImageView
                android:layout_width="35dp"
                android:padding="10dp"
                android:id="@+id/imgEdit"
                android:src="@drawable/ic_edit"
                android:layout_height="35dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp"></RelativeLayout>

</LinearLayout>