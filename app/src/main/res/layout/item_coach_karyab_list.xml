<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/notif_border"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txtNotifDate"
                    android:textSize="12sp"
                    android:text="1396/12/21"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txtNotifTitle"
                    android:textSize="17sp"
                    android:text="عنوان"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtNotifBody"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/plansDescribe"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/ic_message_default"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />


    </LinearLayout>


</LinearLayout>