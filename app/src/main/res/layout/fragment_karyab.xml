<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification.NewsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lytMain"
        android:layout_height="wrap_content">

        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
            android:layout_width="match_parent"
            android:id="@+id/Recycler"
            android:layout_height="wrap_content">

        </com.cooltechworks.views.shimmer.ShimmerRecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lytDisconnect"
        android:visibility="gone"
        android:gravity="center"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_disconnect"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="شما به اینترنت وصل نیستین !"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:text="تلاش مجدد"
            android:id="@+id/btnTryAgain"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_back_yellow"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lytEmpty"
        android:visibility="gone"
        android:gravity="center"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_not_found"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="هیج موردی یافت نشد !"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>