<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".NavigationMenu.hameganiFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/ic_hameganii"
            android:layout_margin="20dp"
            android:scaleType="fitXY"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_margin="15dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/heyat_address"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/ic_address"
                android:layout_height="15dp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/lytAddress"
            android:layout_marginRight="20dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:background="@drawable/notif_border"
            android:text="مشاهده آدرس بر روی نقشه"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/heyat_phone"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/ic_call2"
                android:layout_height="15dp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/lytCall"
            android:layout_marginRight="20dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:background="@drawable/notif_border"
            android:text="تماس با شماره همراه"
            android:layout_height="wrap_content" />


    </LinearLayout>


