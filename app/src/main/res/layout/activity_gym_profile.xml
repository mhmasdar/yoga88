<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technologygroup.rayannoor.yoga.Gyms.GymProfileActivity">

    <LinearLayout
        android:id="@+id/lytParent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/gymImage"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="باشگاه ورزشی کیمیا تبریز"
                    android:id="@+id/txtGymName"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/AudioFileInfoOverlayText2"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/coach_profile_back"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="45dp"
                        android:padding="8dp"
                        android:id="@+id/imgTelegram"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_telegram"/>

                    <ImageView
                        android:layout_width="45dp"
                        android:padding="8dp"
                        android:id="@+id/imgInstagram"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_instagram" />

                    <ImageView
                        android:layout_width="45dp"
                        android:padding="8dp"
                        android:id="@+id/imgSorush"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_sorush" />

                    <ImageView
                        android:layout_width="45dp"
                        android:padding="8dp"
                        android:id="@+id/imgEmail"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_email" />

                    <ImageView
                        android:layout_width="45dp"
                        android:padding="8dp"
                        android:id="@+id/imgCall"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_call" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#cd212121"
                android:layout_alignParentBottom="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/lytGymRating"
                    android:layout_height="match_parent">

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:id="@+id/RatingBarGym"
                        style="?android:attr/ratingBarStyleSmall"
                        android:rating="3.5"
                        android:numStars="5"
                        android:theme="@style/RatingBar"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="3.5"
                        android:id="@+id/txtGymRate"
                        android:layout_marginLeft="8dp"
                        android:textColor="#ffffff"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0.5dp"
                    android:background="#ffffff"
                    android:layout_height="match_parent"></RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <com.like.LikeButton
                        app:icon_type="heart"
                        app:icon_size="20dp"
                        android:id="@+id/btnLike"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="25"
                        android:id="@+id/txtLikeCount"
                        android:layout_marginLeft="8dp"
                        android:textColor="#ffffff"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="25dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back_white"
                    android:layout_height="25dp" />

            </RelativeLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#f2f2f2"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    android:id="@+id/lytGymAddress"
                    android:gravity="center_vertical"
                    android:background="@drawable/notif_border"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="70dp"
                        android:padding="10dp"
                        android:id="@+id/imgNavigate"
                        android:src="@drawable/ic_navigate"
                        android:layout_height="70dp"/>

                    <RelativeLayout
                        android:layout_width="0.5dp"
                        android:background="@color/black"
                        android:layout_height="match_parent"></RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="8dp"
                            android:id="@+id/txtAddress"
                            android:textSize="13sp"
                            android:gravity="right"
                            android:textColor="@color/lightBlack"
                            android:text="تبریز - شهرک زعفرانیه - کوی شبنم - 10 متری 49 غربی - پلاک 11 - طبقه سوم"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/imgLockHonours"
                            android:src="@drawable/ic_lock"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:alpha="0.3"
                            android:id="@+id/lytGymHonours"
                            android:padding="20dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="30dp"
                                android:src="@drawable/ic_certificate"
                                android:layout_height="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="افتخارات"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/imgLockAbout"
                            android:src="@drawable/ic_lock"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/lytAbout"
                            android:orientation="vertical"
                            android:alpha="0.3"
                            android:gravity="center"
                            android:padding="20dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="30dp"
                                android:src="@drawable/ic_bio"
                                android:layout_height="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="درباره"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/imgLockClip"
                            android:src="@drawable/ic_lock"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/lytClip"
                            android:orientation="vertical"
                            android:alpha="0.3"
                            android:gravity="center"
                            android:padding="20dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="30dp"
                                android:src="@drawable/ic_clip"
                                android:layout_height="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="کلیپ و ویدئو"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/imgLockPhotos"
                            android:src="@drawable/ic_lock"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/lytPhotos"
                            android:orientation="vertical"
                            android:alpha="0.3"
                            android:gravity="center"
                            android:padding="20dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="30dp"
                                android:src="@drawable/ic_gallery"
                                android:layout_height="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="گالری عکس"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/imgLockCoaches"
                            android:src="@drawable/ic_lock"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/lytCoaches"
                            android:alpha="0.3"
                            android:gravity="center"
                            android:padding="20dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="30dp"
                                android:src="@drawable/ic_contract_gyms"
                                android:layout_height="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text=" مربیان طرف قرارداد"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/imgLockCourse"
                            android:src="@drawable/ic_lock"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/lytCourses"
                            android:alpha="0.3"
                            android:gravity="center"
                            android:padding="20dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="30dp"
                                android:src="@drawable/ic_certificate"
                                android:layout_height="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="دوره های آموزشی"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/imgLockWorkTime"
                            android:src="@drawable/ic_lock"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/lytWorkTime"
                            android:alpha="0.3"
                            android:gravity="center"
                            android:padding="20dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="30dp"
                                android:src="@drawable/ic_schedule"
                                android:layout_height="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="ساعات کاری"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/imgLockNotifs"
                            android:src="@drawable/ic_lock"
                            android:layout_margin="5dp"
                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/lytNotifs"
                            android:alpha="0.3"
                            android:gravity="center"
                            android:padding="20dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="30dp"
                                android:src="@drawable/ic_notifs"
                                android:layout_height="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="اعلانات و اطلاعیه ها"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_comment"
        app:backgroundTint="@color/colorAccent"
        android:id="@+id/floatAction"
        android:layout_height="wrap_content" />


</RelativeLayout>
